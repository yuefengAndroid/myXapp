<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="110dp"
    android:layout_height="125dp">

    <ImageView
        android:id="@+id/IvGroupFace"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="3dp"
        app:layout_constraintBottom_toTopOf="@+id/TvGroupNickname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TvGroupNickname"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="愛在寂寞時"
        android:textColor="@color/gray_747474"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/IvGroupFace"
        app:layout_constraintRight_toRightOf="@+id/IvGroupFace"
        app:layout_constraintTop_toBottomOf="@+id/IvGroupFace" />
</androidx.constraintlayout.widget.ConstraintLayout>