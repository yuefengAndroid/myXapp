<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.XStartPlatformView">

  <com.example.xapp.base.XNoScrollViewPager
      android:id="@+id/aspvVpAllView"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toTopOf="@+id/aspvTvTabBackground"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <TextView
      android:id="@+id/aspvTvTabBackground"
      android:layout_width="match_parent"
      android:layout_height="55dp"
      android:background="@drawable/tab"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/aspvVpAllView"/>

  <TextView
      android:id="@+id/aspvTvHomeButton"
      android:layout_width="60dp"
      android:layout_height="45dp"
      android:layout_marginStart="20dp"
      app:layout_constraintTop_toTopOf="@+id/aspvTvTabBackground"
      app:layout_constraintLeft_toLeftOf="@+id/aspvTvTabBackground"
      app:layout_constraintRight_toLeftOf="@+id/aspvTvChatButton"
      app:layout_constraintBottom_toBottomOf="@+id/aspvTvTabBackground"/>

  <TextView
      android:id="@+id/aspvTvChatButton"
      android:layout_width="60dp"
      android:layout_height="45dp"
      android:layout_marginStart="20dp"
      app:layout_constraintTop_toTopOf="@+id/aspvTvHomeButton"
      app:layout_constraintLeft_toRightOf="@+id/aspvTvHomeButton"
      app:layout_constraintRight_toLeftOf="@+id/aspvTvMapButton"
      app:layout_constraintBottom_toBottomOf="@+id/aspvTvHomeButton"/>

  <TextView
      android:id="@+id/aspvTvMapButton"
      android:layout_width="60dp"
      android:layout_height="45dp"
      android:layout_marginStart="17dp"
      app:layout_constraintTop_toTopOf="@+id/aspvTvHomeButton"
      app:layout_constraintLeft_toRightOf="@+id/aspvTvChatButton"
      app:layout_constraintRight_toLeftOf="@+id/aspvTvOrderButton"
      app:layout_constraintBottom_toBottomOf="@+id/aspvTvHomeButton"/>

  <TextView
      android:id="@+id/aspvTvOrderButton"
      android:layout_width="60dp"
      android:layout_height="45dp"
      android:layout_marginStart="17dp"
      app:layout_constraintTop_toTopOf="@+id/aspvTvHomeButton"
      app:layout_constraintLeft_toRightOf="@+id/aspvTvMapButton"
      app:layout_constraintRight_toLeftOf="@+id/aspvTvLoveButton"
      app:layout_constraintBottom_toBottomOf="@+id/aspvTvHomeButton"/>

  <TextView
      android:id="@+id/aspvTvLoveButton"
      android:layout_width="60dp"
      android:layout_height="45dp"
      android:layout_marginStart="15dp"
      android:layout_marginEnd="25dp"
      app:layout_constraintTop_toTopOf="@+id/aspvTvHomeButton"
      app:layout_constraintLeft_toRightOf="@+id/aspvTvOrderButton"
      app:layout_constraintBottom_toBottomOf="@+id/aspvTvHomeButton"
      app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>