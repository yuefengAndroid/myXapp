<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="XViewActivity" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorPrimary">#1c1421</item>
        <item name="colorPrimaryDark">#1c1421</item>
        <item name="colorAccent">#1c1421</item>
        <item name="android:windowBackground">@drawable/background_white</item>
    </style>
</resources>
